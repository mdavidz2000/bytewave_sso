APP_ENV=development
APP_URL=http://localhost:8079

# Database
DB_HOST=localhost
DB_NAME=bytewave_sso
DB_USER=david
DB_PASS=david

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this

# Applications
APP1_CLIENT_ID=app1_client_id
APP1_CLIENT_SECRET=app1_secret_key
APP1_REDIRECT_URI=http://localhost:3000/auth/callback

APP2_CLIENT_ID=app2_client_id
APP2_CLIENT_SECRET=app2_secret_key
APP2_REDIRECT_URI=http://localhost:3001/auth/callback

# Email Configuration
EMAIL_DRIVER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_ENCRYPTION=tls
EMAIL_FROM=noreply@yourapp.com
EMAIL_FROM_NAME="SSO Auth System"

# File Uploads
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./public/uploads/

# Security
PASSWORD_RESET_EXPIRY=3600 # 1 hour in seconds
EMAIL_VERIFICATION_EXPIRY=86400 # 24 hours in seconds
SESSION_TIMEOUT=1800 # 30 minutes in seconds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900 # 15 minutes in seconds

# API
API_RATE_LIMIT=100 # requests per hour
API_KEY_EXPIRY=31536000 # 1 year in seconds